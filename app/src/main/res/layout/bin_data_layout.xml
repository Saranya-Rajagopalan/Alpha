<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:id="@+id/progressBar"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:max="100"
        android:visibility="visible"
        android:indeterminate="false"
        />
    <GridLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:rowCount="5"
        android:columnCount="2"
        android:paddingLeft="20dp"
        >
        <TextView android:textColor="@android:color/black"
            android:text="ID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            />

        <TextView android:textColor="@android:color/black"
            android:id="@+id/id_entry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"/>
        <TextView android:textColor="@android:color/black"
            android:text="Type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"/>
        <TextView android:textColor="@android:color/black"
            android:id="@+id/type_entry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"/>
        <TextView android:textColor="@android:color/black"
            android:text="Priority"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"/>
        <TextView android:textColor="@android:color/black"
            android:id="@+id/priority_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"/>
        <TextView android:textColor="@android:color/black"
            android:text="Capacity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"/>
        <TextView android:textColor="@android:color/black"
            android:id="@+id/capacity_entry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"/>
        <TextView android:textColor="@android:color/black"
            android:text="Last Collected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"/>
        <TextView android:textColor="@android:color/black"
            android:id="@+id/last_collected_entry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"/>

    </GridLayout>

</LinearLayout>